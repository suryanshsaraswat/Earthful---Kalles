<script>
  $(document).ready(function(){
    $('.pushme').on('click',function(){
      $(this).parent('div').next('.show_onClick').slideToggle();
      $(this).toggleClass('lessdata');
    });
    var count_sec = $('.view_more_content .multicolumn-list li').length;
