<section class="category-home">
  <div class="page-width">
    <div class="main_head_wrap">{{ page.metafields.global.benifittitle.value }}</div>
    <ul class="home-inner">
      {% for block in section.blocks %}
<li class="list_card">
        <div class="multicolumn-card">
          <div class="multicolumn-card__info">
            <div class="card_cover">
             <h3><strong>{{ block.settings.title }}</strong></h3>
              <p><strong>{{ block.settings.text }}</strong></span></div>         
          </div>        
        </div>
      </li>
        {% endfor %}  
    </ul>
  </div>
</section>
<style>
  .category-home .main_head_wrap {text-align: center;color: #000;font-weight: 600;font-size: 20px;}
  .category-home .multicolumn-card h3 {margin-bottom: 0;}
  .category-home .rte>p:last-child{color: #000;font-weight: 600;}
  .vdivi3 {text-align: center;font-size: 25px;color: grey;font-weight: bold;padding: 15px;}
  .category-home .card_cover:before {content: '|';position: absolute;top: auto;left: auto;right: 0;font-size: 25px;font-weight: 900;color: grey;}
  .category-home .multicolumn-card__info{position: relative;text-align: center;padding: 2.5rem 3.5rem;}
  .category-home ul.home-inner {padding: 0;display: flex;list-style: none;justify-content: space-between;}
  .category-home li { width: 25%;}
  li.list_card:last-child .card_cover:before {display: none;}
    @media(max-width:768px){
    .category-home li {width: 50%;}
    .category-home ul.home-inner {flex-wrap: wrap; }
    li.list_card:nth-child(2) .card_cover:before {display: none;}
  }
</style>
{% schema %}
{
  "name": "Ingrediant Heading Text",
  "class": "spaced-section spaced-section--full-width",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id" : "heading",
      "label" : "Heading"
    }
    
  ],
   "blocks": [
    {
      "type": "column",
      "name": "t:sections.multicolumn.blocks.column.name",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "default": "Column",
          "label": "Title"
        },
        {
          "type": "html",
          "id": "text",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [
     {
      "name": "Ingrediannt Text Head",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
   
  ]
}
{% endschema %}